---
interface Props {
	date: Date | string;
}

const { date } = Astro.props;
const normalizedDate = date instanceof Date ? date : new Date(date);
---

<time datetime={normalizedDate.toISOString()}>
	{
		normalizedDate.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>
