---
import type { HTMLAttributes } from 'astro/types';
import { withBase } from '../lib/paths';

type Props = HTMLAttributes<'a'>;

const { href, class: className, ...props } = Astro.props;
const pathname = Astro.url.pathname.replace(import.meta.env.BASE_URL, '');
const subpath = pathname.match(/[^\/]+/g);
const isActive = href === pathname || href === '/' + (subpath?.[0] || '');
const finalHref = href?.startsWith('http') ? href : withBase(href || '/');
---

<a href={finalHref} class:list={[className, { active: isActive }]} {...props}>
	<slot />
</a>

<style>
	a {
		display: inline-flex;
		align-items: center;
		position: relative;
		padding: 0.48rem 0.7rem 0.62rem;
		border-radius: 0.72rem;
		font-size: 0.83rem;
		font-weight: 600;
		letter-spacing: -0.01em;
		text-decoration: none;
		line-height: 1;
		color: color-mix(in srgb, var(--text-strong), var(--panel-bg) 34%);
	}

	a:hover {
		color: var(--text-strong);
		background: color-mix(in srgb, var(--line-subtle), transparent 55%);
	}

	a.active {
		color: var(--text-strong);
		background: color-mix(in srgb, var(--line-subtle), transparent 45%);
	}

	a.active::after {
		content: "";
		position: absolute;
		left: 50%;
		bottom: 0.16rem;
		width: 1.15rem;
		height: 0.16rem;
		transform: translateX(-50%);
		border-radius: 999px;
		background: color-mix(in srgb, var(--link), white 10%);
	}

	:root[data-theme="dark"] a {
		color: color-mix(in srgb, var(--text-strong), var(--panel-bg) 24%);
	}

	:root[data-theme="dark"] a.active {
		background: color-mix(in srgb, var(--line-subtle), transparent 25%);
	}
</style>
