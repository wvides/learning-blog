---
import PostCard from '../components/PostCard.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { withBase } from '../lib/paths';
import { getPublishedPosts, postPathFromId } from '../lib/posts';
import SiteShell from '../layouts/SiteShell.astro';

const recentPosts = (await getPublishedPosts()).slice(0, 3);
---

<SiteShell title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<section class="hero">
		<div class="hero-copy">
			<p class="eyebrow">Starter</p>
			<h1>Starter - a Minimalist Personal Blog Template.</h1>
			<p>
				This is where I share short notes on systems, delivery workflows, and practical reliability.
			</p>
		</div>
		<div class="hero-art" aria-hidden="true">
			<img
				class="hero-image hero-image-back"
				src={withBase('/images/mountain-hero-a.jpg')}
				alt=""
				loading="eager"
				decoding="async"
			/>
			<img
				class="hero-image hero-image-front"
				src={withBase('/images/mountain-hero-b.jpg')}
				alt=""
				loading="eager"
				decoding="async"
			/>
		</div>
	</section>

	<section class="recent-posts">
		<div class="section-head">
			<h2>Recent posts</h2>
			<a href={withBase('/blog')}>View all</a>
		</div>
		<ul>
			{
				recentPosts.map((post) => (
					<li>
						<PostCard
							href={postPathFromId(post.id)}
							title={post.data.title}
							description={post.data.summary || post.data.description}
							pubDate={post.data.pubDate}
							tags={post.data.tags}
						/>
					</li>
				))
			}
		</ul>
	</section>
</SiteShell>

<style>
	.hero {
		display: grid;
		grid-template-columns: minmax(0, 1fr);
		gap: var(--space-6);
		padding-bottom: var(--space-8);
	}

	.hero-copy {
		max-width: 640px;
	}

	.eyebrow {
		margin-bottom: var(--space-3);
		font-size: 0.72rem;
		letter-spacing: 0.08em;
		text-transform: uppercase;
		color: var(--text-muted);
	}

	.hero-copy h1 {
		max-width: 14ch;
		margin-bottom: var(--space-4);
	}

	.hero-copy p {
		max-width: 60ch;
	}

	.hero-art {
		position: relative;
		height: clamp(12rem, 26vw, 17.5rem);
		border-radius: var(--radius-md);
		border: 1px solid rgba(255, 255, 255, 0.3);
		overflow: hidden;
		background: linear-gradient(180deg, rgba(11, 142, 160, 0.88), rgba(8, 106, 121, 0.95));
	}

	.hero-image {
		position: absolute;
		inset: 0;
		width: 100%;
		height: 100%;
		object-fit: cover;
	}

	.hero-image-back {
		transform: scale(1.05);
		filter: saturate(0.9) contrast(1.06);
		opacity: 0.92;
	}

	.hero-image-front {
		transform: scale(1.03);
		filter: saturate(1.15) contrast(0.92);
		mix-blend-mode: multiply;
		opacity: 0.68;
	}

	.hero-art::after {
		content: "";
		position: absolute;
		inset: 0;
		background:
			linear-gradient(180deg, rgba(240, 251, 252, 0.2), rgba(7, 86, 98, 0.25) 45%, rgba(5, 56, 64, 0.65));
		pointer-events: none;
	}

	.section-head {
		display: flex;
		align-items: baseline;
		justify-content: space-between;
		gap: var(--space-3);
		margin-bottom: var(--space-4);
	}

	.section-head h2 {
		margin: 0;
	}

	.recent-posts ul {
		list-style: none;
		padding: 0;
		margin: 0;
		display: grid;
		gap: var(--space-4);
	}

	@media (max-width: 720px) {
		.hero {
			padding-bottom: var(--space-7);
		}
	}
</style>
